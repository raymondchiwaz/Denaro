<ui:ContentDialog x:Class="NickvisionMoney.Windows.Views.AboutDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  Title="About Denaro"
                  CloseButtonText="Close">
    
    <StackPanel Margin="24" MinWidth="400" MaxWidth="500">
        <Image Source="../Resources/org.nickvision.money-symbolic.png" Width="64" Height="64" 
               HorizontalAlignment="Center" Margin="0,0,0,16"/>
        
        <TextBlock Name="AppNameText" Text="Denaro" FontSize="24" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
        
        <TextBlock Name="VersionText" FontSize="14" HorizontalAlignment="Center" 
                   Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}" Margin="0,0,0,16"/>
        
        <TextBlock Name="DescriptionText" Text="Manage your personal finances" 
                   HorizontalAlignment="Center" Margin="0,0,0,24" TextWrapping="Wrap"/>
        
        <TextBlock Text="Developers" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <TextBlock Name="DevelopersText" Margin="0,0,0,16" TextWrapping="Wrap"/>
        
        <TextBlock Text="Changelog" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
            <TextBlock Name="ChangelogText" TextWrapping="Wrap" FontFamily="Consolas,Courier New,monospace"/>
        </ScrollViewer>
    </StackPanel>
    
</ui:ContentDialog> 