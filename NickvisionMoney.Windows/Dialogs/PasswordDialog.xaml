<ui:ContentDialog x:Class="NickvisionMoney.Windows.Views.PasswordDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  Title="Account Password Required"
                  PrimaryButtonText="OK"
                  SecondaryButtonText="Cancel"
                  DefaultButton="Primary">
    
    <StackPanel Margin="24" MinWidth="300">
        <TextBlock Name="MessageText" Text="Enter password for account:" 
                   Margin="0,0,0,16" TextWrapping="Wrap"/>
        <TextBlock Name="AccountNameText" FontWeight="SemiBold" 
                   Margin="0,0,0,16" TextWrapping="Wrap"/>
        <PasswordBox Name="PasswordBox" Margin="0,0,0,16"/>
        <TextBlock Text="Leave blank if the account is not encrypted" 
                   FontSize="12" Foreground="{DynamicResource SystemControlPageTextBaseMediumBrush}"/>
    </StackPanel>
    
</ui:ContentDialog> 